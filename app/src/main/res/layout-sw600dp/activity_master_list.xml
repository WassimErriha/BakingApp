<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_pane_activity_master_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.example.wassim.bakingapp.Activities.MasterListActivity">

    <fragment
        android:id="@+id/recipe_detail_fragment"
        android:name="com.example.wassim.bakingapp.UI.MasterListFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent" />

    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/Activity_details_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/flex_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerInside" />

    </LinearLayout>


</LinearLayout>